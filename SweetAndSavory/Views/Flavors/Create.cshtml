@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Flavor

<h4>Add a new flavor</h4>

@using (Html.BeginForm())
{
  <div class="input-group mb-3">
    @Html.LabelFor(model => model.FlavorName, "Flavor Name", new{@class = "input-group-text"})
    @Html.TextBoxFor(m => m.FlavorName, new{@class = "form-control"})
  </div>
  <div class="input-group input-group mb-3">
    <span class="input-group-text" id="inputGroup-sizing-lg">@Html.Label("Select treat") </span>
    @Html.DropDownList("TreatId", (IEnumerable<SelectListItem>)@ViewBag.TreatId, "Choose treat", new{@class =
  "form-select"})
  </div>


  <input type="submit" value="Add new flavor" class="btn btn-light" />
}
<div class="hstack gap-3 pt-3 mt-3 border-top border-dark">
  <p>@Html.ActionLink("Show all flavors", "Index", new {}, new {@class="btn btn-light"})</p>
</div>